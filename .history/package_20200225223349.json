{
  "name": "bobvux",
  "version": "1.0.0",
  "description": "Com Mobile UI Components built on Vue",
  "main": "lib/vueComponentLib.js",
  "style": "lib/index.css",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "dev": "vant-cli dev",
    "test": "vant-cli test",
    "lint": "vant-cli lint",
    "build": "cross-env NODE_ENV=production node build/build.js",
    "build:zip": "node build/build-zips",
    "build:vant": "vant-cli build",
    "build:site": "vant-cli build-site"
    "analyz": "cross-env NODE_ENV=production npm_config_report=true node build/build.js",
    "release": "vant-cli release",
    "test:coverage": "open test/coverage/index.html",
  },
  "author": "rytong",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "vant-cli commit-lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{vue,css,less,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "devDependencies": {
    "@vant/cli": "^2.0.0",
    "archiver": "^3.1.1",
    "babel-plugin-import": "^1.13.0",
    "compression-webpack-plugin": "^3.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-pxtorem": "^4.0.1",
    "simple-progress-webpack-plugin": "^1.1.2",
    "terser-webpack-plugin": "^2.3.5",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vant"
    ]
  },
  "stylelint": {
    "extends": [
      "@vant/stylelint-config"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ]
}
